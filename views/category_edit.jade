extends base_company
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .row.x_title
              .col-md-12
                h2
                 img(src='/images/system_admin.png',height='35px',width='30px')
                 | &nbsp;分类管理&nbsp;&nbsp; 
                 
              .col-md-12
               for row, index in data
                form.form-horizontal.form-label-left(role='form',method='post' action='/category/edit/#{row.category_id}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 分类名称 &nbsp; : &nbsp;
                        .col-md-3
                          input(type='text', name='category_name',id='category_name',style='width:400px',value='#{row.category_name}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 类别描述 &nbsp; : &nbsp;
                        .col-md-3
                          input(type='text',name='category_desc',id='category_desc',style='width:400px',value='#{row.category_desc}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 团队名字 &nbsp; : &nbsp;
                        .col-md-3
                          select(id="group",name="group").col-sm-12
                            option(value="#{row.group_id}") #{row.group_name}
                            option(value="") ----------------------
                            for row, index in group
                              option(value="#{row.group_id}") #{row.group_name}
                    
                    .form-group
                        .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
                          button.btn.btn-primary(type='submit',id="confirm_btn") 确认
                          button.btn.btn-success(type='button',onclick='goBack();') 取消
    // /page content

