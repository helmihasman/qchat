extends base
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .row.x_title
              .col-md-12
                h2
                 img(src='../../images/system_admin.png',height='35px',width='30px')
                 a(href='/location') &nbsp;Location |
                 a(href='/location_add') &nbsp;Add Location |
                 a(href='/floor_plan_list') &nbsp;Floor Plan |
                 a(href='/floor_plan') &nbsp;Add Floor Plan |
              .col-md-12
               for row, index in data
                form.form-horizontal.form-label-left(role='form',method='post' action='/location/edit/#{row.location_id}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Beacon ID &nbsp; : &nbsp;
                        .col-md-6
                          input(type='text', name='beacon_id',id='beacon_id',value='#{row.beacon_id}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Location &nbsp; : &nbsp;
                        .col-md-6
                          input(type='text', name='beacon_location',id='beacon_location',value='#{row.beacon_location}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Level &nbsp; : &nbsp;
                        .col-md-6
                          input(type='text', name='beacon_level',id='beacon_level',value='#{row.beacon_level}')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Code &nbsp; : &nbsp;
                        .col-md-6
                          input(type='text', name='location_code',id='location_code',value='#{row.location_code}')
                    .form-group
                        .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
                          button.btn.btn-primary(type='submit',id="confirm_btn") Confirm
                          button.btn.btn-success(type='button',onclick='goBack();') Cancel
    // /page content

