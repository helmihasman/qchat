extends base
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .row.x_title
              .col-md-12
                h2
                 img(src='images/system_admin.png',height='35px',width='30px')
                 a(href='/location') &nbsp;Location |
                 a(href='/location_add') &nbsp;Add Location |
                 a(href='/floor_plan_list') &nbsp;Floor Plan |
                 a(href='/floor_plan') &nbsp;Add Floor Plan |
                  br
                  br
              .col-md-12
                table#datatable.table.table-striped.table-bordered
                    thead
                      tr
                        th ID
                        th Floor name
                        th Floor Plan
                        th Action
                    tbody
                      for row, index in data
                        tr
                          td #{index+1}
                          td #{row.floor_name}
                          td 
                            img(src='#{row.floorplan_img}',height='200px',width='auto')
                          
                          td
                            div(style='display:inline-block')
                                a(href='/location/edit/#{row.location_id}').btn.btn-sm.btn-primary
                                        i.fa.fa-edit
                             div(style='display:inline-block')
                                a(href='/location/delete/#{row.location_id}',onclick="return confirm('Are you sure you want to delete?');").btn.btn-sm.btn-danger
                                        i.fa.fa-remove
            .clearfix
    // /page content

