extends base
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .f_content
                    .col-xs-12
                        ul.nav.nav-tabs.bar_tabs
                          li
                            a(href='/building_management') 建筑管理
                          li.active
                            a(href='/region_management') 区域管理
                          li
                            a(href='/group_management') 集团管理
                          li
                            a(href='/category_management') 分类管理
            .row.f_title
              .col-md-6
                h3
                  img(src='/images/building.png',height='30px',width='25px')
                  | &nbsp;地区列表&nbsp;&nbsp;
                  a.btn.btn-primary.btn-xs.btn-flata(href='/region_add')
                      i.fa.fa-plus
              .col-md-12
                table#datatable.table.table-striped.table-bordered
                    thead
                      tr
                        th(width='10%') 数
                        th 地区名称
                        th(width='10%')
                    tbody
                      for row, index in data
                        tr
                          td #{index+1}
                          td #{row.region_name}
                          td
                            div(style='display:inline-block')
                                a(href='/region/edit/#{row.region_id}').btn.btn-sm.btn-primary
                                        i.fa.fa-edit
                             div(style='display:inline-block')
                                a(href='/region/delete/#{row.region_id}',onclick="return confirm('你确定你要删除？');").btn.btn-sm.btn-danger
                                        i.fa.fa-remove
                            
            .clearfix
    // /page content

