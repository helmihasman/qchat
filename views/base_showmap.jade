doctype html
html
    head
        include header.jade
     //body.nav-md(onload='runMaps()')
    body.nav-sm(onload='runMaps2()')
     div.container.body
      div.main_container
        if session.language === 'en'
            if session.passport.user.employee_level === '2'
                include navigation_user_en.jade
                //include sidebar_user_en.jade
            else if session.passport.user.employee_level === '1'
                include navigation_en.jade
                //include sidebar_en.jade
            else if session.passport.user.employee_level === '0'
                include navigation_admin_en.jade
                //include sidebar_en.jade
        else if session.language === 'cn'
            if session.passport.user.employee_level === '2'
                include navigation_user.jade
                //include sidebar_user.jade
            else if session.passport.user.employee_level === '1'
                include navigation.jade
                //include sidebar.jade
            else if session.passport.user.employee_level === '0'
                include navigation_admin.jade
                //include sidebar.jade
        block content
        include footer.jade
        include js.jade
