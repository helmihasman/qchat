extends base_company
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .row.x_title
              .col-md-12
                h2
                 img(src='/images/system_admin.png',height='35px',width='30px')
                 | &nbsp;建筑管理&nbsp;&nbsp; 
                 
              .col-md-12
                form.form-horizontal.form-label-left(role='form',method='post' action='/building/add')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 建筑名称 &nbsp; : &nbsp;
                        .col-md-3
                          input(type='text', name='building_name',id='building_name',style='width:400px')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 建筑地址 &nbsp; : &nbsp;
                        .col-md-3
                          input(type='text',name='building_add',id='building_add',style='width:400px')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 地区 &nbsp; : &nbsp;
                        .col-md-3
                          select(id="region",name="region").col-sm-12
                            for row, index in data
                              option(value="#{row.region_id}") #{row.region_name}
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 位置 &nbsp; : &nbsp;
                        .col-md-3
                          input(type='text', name='location',id='location',style='width:400px')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 &nbsp;&nbsp;
                        .col-md-9
                          input#pac-input.controls(type='text', placeholder='搜索')
                          #googleMapCompany(style='width:100%;height:250px;')
                          
                    .form-group
                        .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
                          button.btn.btn-primary(type='submit',id="confirm_btn") 确认
                          button.btn.btn-success(type='button',onclick='goBack();') 取消
    // /page content

