extends base
block content 
    // page content
    .right_col(role='main',style="background:#49a8ff")
      // top tiles
      .row
        .col-md-12.col-sm-12.col-xs-12
          .dashboard_graph
            .row.x_title
              .col-md-12
                h2
                 img(src='/images/system_admin.png',height='35px',width='30px')
                 a(href='/location') &nbsp;Location |
                 a(href='/location_add') &nbsp;Add Location |
                 a(href='/floor_plan_list') &nbsp;Floor Plan |
                 a(href='/floor_plan') &nbsp;Add Floor Plan |
              .col-md-12
                form.form-horizontal.form-label-left(enctype="multipart/form-data",role='form',method='post' action='/floor_plan/add')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Floor Plan Image &nbsp; : &nbsp;
                        .col-md-6
                          input(type="file",id="floorplan_img",name="floorplan_img",required)
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Floor Name &nbsp; : &nbsp;
                        .col-md-6
                          input(type='text', name='floor_name',id='floor_name')
                    .form-group
                        label.control-label.col-md-3.col-sm-3.col-xs-12 Building &nbsp; : &nbsp;
                        .col-md-6
                          select(id="building",name="building").col-sm-3
                            for row, index in data
                              option(value="#{row.building_id}") #{row.building_name}
                    .form-group
                        .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
                          button.btn.btn-primary(type='submit',id="confirm_btn") Confirm
                          button.btn.btn-success(type='button',onclick='goBack();') Cancel
    // /page content

